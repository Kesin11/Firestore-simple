{
  "extends": [
    ":ignoreModulesAndTests",
    ":label(renovate)",
    ":prConcurrentLimit10",
    ":timezone(Asia/Tokyo)"
  ],
  "npm": {
    "extends": [
      ":automergePatch",
      ":unpublishSafe"
    ],
    "rangeStrategy": "bump",
    "packageRules": [
      {
        "groupName": "Ignore check ESLint and plugin and config update",
        "packageNames": ["eslint"],
        "packagePatterns": ["^eslint-config-", "^eslint-plugin-", "^@typescript-eslint"],
        "ignoreDeps": [
          "@typescript-eslint/eslint-plugin",
          "@typescript-eslint/parser",
          "eslint",
          "eslint-config-standard",
          "eslint-plugin-import",
          "eslint-plugin-node",
          "eslint-plugin-promise",
          "eslint-plugin-standard"
        ]
      },
      {
        "description": "automerge minor updates of widely used libraries in devDeps",
        "updateTypes": ["minor"],
        "depTypeList": ["devDependencies"],
        "automerge": true,
        "packageNames": ["codecov", "jest", "@types/jest", "ts-jest", "typescript"]
      },
      {
        "description": "automerge type utility module",
        "automerge": true,
        "packageNames": ["utility-types"]
      }
    ]
  }
}
